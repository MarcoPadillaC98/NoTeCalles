<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ui.gallery.g_CallejeroActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="209dp"
        android:layout_height="203dp"
        android:layout_marginTop="48dp"
        android:src="@mipmap/img_callejero_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_Callejero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Acoso Callejero"
        android:fontFamily="@font/bebas_neue"
        android:textColor="#070707"
        android:textSize="30sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <View
        android:id="@+id/view_informacion"
        android:layout_width="380dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/style_bordes_edittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Callejero" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="332dp"
        android:layout_height="214dp"
        android:layout_marginTop="40dp"
        android:text="El acoso callejero es una forma de violencia de género que involucra comportamientos no deseados o agresivos, como comentarios, silbidos, gestos obscenos, persecución, tocamientos no consentidos u otras acciones intimidatorias que ocurren en espacios públicos, especialmente dirigidos a personas, en su mayoría mujeres, por razón de su género. Este tipo de acoso puede provocar incomodidad, miedo, inseguridad y afectar la libertad y seguridad de quienes lo sufren."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Callejero" />

    <Button
        android:id="@+id/button7"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/img_volver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

</androidx.constraintlayout.widget.ConstraintLayout>